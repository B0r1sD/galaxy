<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="Vizarr Viewer">
    <description>Basic visualization for Zarr-based images like OME-Zarr</description>
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>

            <test type="isinstance" test_attr="datatype" result_type="datatype">text.ZarrRemoteUri</test>
            <test type="isinstance" test_attr="datatype" result_type="datatype">data:ZarrDirectory</test>
            <test type="isinstance" test_attr="datatype" result_type="datatype">text:OMEZarrRemoteUri</test>
            <test type="isinstance" test_attr="datatype" result_type="datatype">images.OMEZarr</test>
            
            <to_param param_attr="id">dataset_id</to_param>
        </data_source>
    </data_sources>
    <params>
        <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
    </params>
    <entry_point entry_point_type="chart" src="script.js"/>
</visualization>